@model Estacione.Models.Estacionamento


@{
    ViewData["Title"] = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Estacionamento" asp-action="CadastrarEstacionamento" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeEstacionamento" class="control-label">Nome do estacionamento</label>
                <input asp-for="NomeEstacionamento" class="form-control" />
                <span asp-validation-for="NomeEstacionamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cep" class="control-label">CEP</label>
                <input asp-for="Cep" class="form-control" />

                @*<select asp-for="Cep" class="form-control">
                <option value="">-- Select Gender --</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>*@

                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NomeRua" class="control-label">Endereço</label>
                <input asp-for="NomeRua" class="form-control" />
                <span asp-validation-for="NomeRua" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Numero" class="control-label">Número</label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bairro" class="control-label">Bairro</label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cidade" class="control-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="control-label">Estado</label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoLogradouro" class="control-label">Logradouro</label>
                <input asp-for="TipoLogradouro" class="form-control" />
                <span asp-validation-for="TipoLogradouro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrecoHora" class="control-label">Preço hora</label>
                <input asp-for="PrecoHora" class="form-control" />
                <span asp-validation-for="PrecoHora" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Avaliacao" class="control-label">Avaliação</label>
                <input asp-for="Avaliacao" class="form-control" />
                <span asp-validation-for="Avaliacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroVagas" class="control-label">Número de vagas</label>
                <input asp-for="NumeroVagas" class="form-control" />
                <span asp-validation-for="NumeroVagas" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Página inicial</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

